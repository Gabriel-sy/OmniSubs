            <ComboBoxItem Content="Slovak (Slovenčina)"/>
            <ComboBoxItem Content="Croatian (Hrvatski)"/>
            <ComboBoxItem Content="Bulgarian (Български)"/>
            <ComboBoxItem Content="Hebrew (עברית)"/>
            <ComboBoxItem Content="Lithuanian (Lietuvių)"/>
            <ComboBoxItem Content="Slovenian (Slovenščina)"/>
            <ComboBoxItem Content="Estonian (Eesti)"/>
            <ComboBoxItem Content="Latvian (Latviešu)"/>
            <ComboBoxItem Content="Serbian (Српски)"/>
            <ComboBoxItem Content="Indonesian (Bahasa Indonesia)"/>
            <ComboBoxItem Content="Malay (Bahasa Melayu)"/>

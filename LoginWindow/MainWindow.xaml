<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWindow"
        mc:Ignorable="d"
        Title="OpenSubtitles Login" Height="570" Width="450">
    <Grid>
        <StackPanel Margin="50,40,50,40">
            <TextBlock Text="Login to OpenSubtitles.com"
                       FontSize="24"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="Username"
                       Margin="0,0,0,5"
                       FontSize="14"/>
            <TextBox x:Name="UsernameInput"
                     Height="35"
                     Padding="5"
                     FontSize="14"
                     Margin="0,0,0,15"/>
            
            <TextBlock Text="Password"
                       Margin="0,0,0,5"
                       FontSize="14"/>
            <PasswordBox x:Name="PasswordInput"
                         Height="35"
                         Padding="5"
                         FontSize="14"
                         Margin="0,0,0,13"/>
            
            <CheckBox x:Name="HearingImpairedCheckBox" Grid.Row="1" Margin="0,0,0,8" 
                      Content="Download hearing impaired subtitles"
            />
            
            <CheckBox x:Name="SubtitleNameCheckBox" Grid.Row="1" Margin="0,0,0,8" 
                      Content="Put language code in subtitle name"
            />
            
            <TextBlock Text="Preferred Language"
                       Margin="0,5,0,5"
                       FontSize="14"/>
            
            <ComboBox x:Name="LanguageSelector"
                  Height="35"
                  Padding="5"
                  FontSize="14"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Spanish (Español)"/>
            <ComboBoxItem Content="Mandarin Chinese (中文)"/>
            <ComboBoxItem Content="Hindi (हिन्दी)"/>
            <ComboBoxItem Content="Arabic (العربية)"/>
            <ComboBoxItem Content="Bengali (বাংলা)"/>
            <ComboBoxItem Content="Portuguese (Brazil)"/>
            <ComboBoxItem Content="Portuguese (Portugal)"/>
            <ComboBoxItem Content="Russian (Русский)"/>
            <ComboBoxItem Content="Japanese (日本語)"/>
            <ComboBoxItem Content="German (Deutsch)"/>
            <ComboBoxItem Content="French (Français)"/>
            <ComboBoxItem Content="Italian (Italiano)"/>
            <ComboBoxItem Content="Korean (한국어)"/>
            <ComboBoxItem Content="Vietnamese (Tiếng Việt)"/>
            <ComboBoxItem Content="Turkish (Türkçe)"/>
            <ComboBoxItem Content="Polish (Polski)"/>
            <ComboBoxItem Content="Ukrainian (Українська)"/>
            <ComboBoxItem Content="Persian (فارسی)"/>
            <ComboBoxItem Content="Thai (ไทย)"/>
            <ComboBoxItem Content="Dutch (Nederlands)"/>
            <ComboBoxItem Content="Greek (Ελληνικά)"/>

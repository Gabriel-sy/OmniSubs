            <ComboBoxItem Content="Gujarati (ગુજરાતી)"/>
            <ComboBoxItem Content="Punjabi (ਪੰਜਾਬੀ)"/>
        </ComboBox>
            <TextBlock Text="Second language (optional)"
               Margin="0,5,0,5"
               FontSize="14"/>
            
            <ComboBox x:Name="SecondSelector"
                  Height="35"
                  Padding="5"
                  FontSize="14"
                  Margin="0,0,0,15">

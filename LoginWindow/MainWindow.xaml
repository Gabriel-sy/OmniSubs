        </ComboBox>
            
            <Button Click="ButtonClick"
                    x:Name="LoginButton"
                    Content="Login"
                    Height="40"
                    FontSize="16"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
